    "@vitest/ui": "^1.0.0",
    "rimraf": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  },
  "dependencies": {
    "animejs": "^3.2.1",
    "p5": "^1.7.0",
    "echarts": "^5.4.3",
    "@splidejs/splide": "^4.1.4"
